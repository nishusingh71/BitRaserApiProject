# ============================================
# SECURITY NOTICE
# ============================================
# NEVER commit .env file to version control
# Copy this file to .env and fill in real values
# Use strong, randomly generated keys

# ============================================
# DATABASE CONFIGURATION
# ============================================
ConnectionStrings__ApplicationDbContextConnection=Server=YOUR_SERVER;Port=4000;Database=YOUR_DB;User=YOUR_USER;Password=YOUR_PASSWORD;SslMode=Required;Pooling=true;MinPoolSize=0;MaxPoolSize=5;ConnectionIdleTimeout=30;ConnectionLifeTime=300;
ConnectionStrings__CloudEraseConnection=Server=YOUR_SERVER;Port=4000;Database=YOUR_PRIVATE_DB;User=YOUR_USER;Password=YOUR_PASSWORD;SslMode=Required;Pooling=true;MinPoolSize=0;MaxPoolSize=5;ConnectionIdleTimeout=30;ConnectionLifeTime=300;

# ============================================
# JWT CONFIGURATION
# ============================================
# CRITICAL: Generate a strong 256-bit (32+ character) random key
# Example: openssl rand -base64 32
Jwt__Key=GENERATE_STRONG_RANDOM_KEY_AT_LEAST_32_CHARS
Jwt__Issuer=DhruvApiIssuer
Jwt__Audience=DhruvApiAudience

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
EmailSettings__SmtpHost=smtp.gmail.com
EmailSettings__SmtpPort=465
EmailSettings__FromEmail=your-email@gmail.com
EmailSettings__FromPassword=YOUR_APP_PASSWORD
EmailSettings__FromName=DSecure Support
EmailSettings__EnableSsl=true

# ============================================
# BREVO EMAIL SERVICE
# ============================================
Brevo__ApiKey=YOUR_BREVO_API_KEY
Brevo__SenderEmail=your-email@gmail.com
Brevo__SenderName=DSecure Support

# ============================================
# ENCRYPTION KEYS
# ============================================
# CRITICAL: Generate strong random keys
# Key: 32 characters for AES-256
# IV: 16 characters for AES block size
# ResponseKey: 32+ characters
Encryption__Enabled=true
Encryption__Key=GENERATE_32_CHAR_RANDOM_KEY_HERE
Encryption__IV=GENERATE_16_CHAR_IV_HERE
Encryption__ResponseKey=GENERATE_32_CHAR_RESPONSE_KEY_HERE

# ============================================
# POLAR PAYMENT GATEWAY
# ============================================
POLAR_ACCESS_TOKEN=polar_oat_YOUR_TOKEN_HERE
POLAR_WEBHOOK_SECRET=polar_whs_YOUR_SECRET_HERE
POLAR_SANDBOX=true
Polar__OrganizationId=YOUR_ORG_ID

# ============================================
# DODO PAYMENT GATEWAY
# ============================================
Dodo__ApiKey=your_dodo_api_key
Dodo__WebhookSecret=whsec_your_dodo_webhook_secret
Dodo__Sandbox=true

# ============================================
# ENVIRONMENT
# ============================================
ASPNETCORE_ENVIRONMENT=Production

# ============================================
# OPTIONAL: DATA PROTECTION
# ============================================
DATAPROTECTION_KEYS_PATH=/app/keys

# ============================================
# OPTIONAL: HTTPS REDIRECT
# ============================================
DISABLE_HTTPS_REDIRECT=false
